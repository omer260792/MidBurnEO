            </intent-filter>
        </activity>
        <activity
            android:name=".CreateCampAc"
            android:label="יצירת מחנה נושא">
            <intent-filter>
                <action android:name="CreateCampAc" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Tabs.AdminAc">
            <intent-filter>
                <action android:name="AdminAc" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Tabs.MainPageAc">
            <intent-filter>
                <action android:name="MainPageAc" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ScheduleAc">
            <intent-filter>
                <action android:name="ScheduleAc" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity android:name=".Tabs.ChatAc">
            <intent-filter>
                <action android:name="ChatAc" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Tabs.EquipmentAc">
            <intent-filter>
                <action android:name="AdminAc" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Tabs.NotesAc">
            <intent-filter>
                <action android:name="AdminAc" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Tabs.ProfileAc">
            <intent-filter>
                <action android:name="AdminAc" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />


        <activity
            android:name=".AddNoteActivity"
            android:label="Standard calendar" />

        <activity
            android:name=".NotePreviewActivity"
            android:label="Standard calendar" />
