            android:name=".Tabs.EquipmentPreviewAc"
            android:label="Standard calendar" />

        <activity
            android:name=".Tabs.EquipmentEditAc"
            android:label="Standard calendar" />

        <activity
            android:name=".Utils.UtilHelper"
            android:label="Standard calendar" />

        <activity
            android:name=".Utils.PopUpUser"
            android:label="Standard calendar" />
