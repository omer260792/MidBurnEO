<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etTimedPre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagePre"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:onClick="onImg" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="-33dp"
        android:text="הוסף תמונה" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">

        <EditText
            android:id="@+id/etNameProdPre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם הפריט:" />

        <EditText
            android:id="@+id/etContetPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תוכן הפריט:" />

        <EditText
            android:id="@+id/etMountPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"

            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כמות רצוייה:" />

        <EditText
            android:id="@+id/etMountCurrentPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כמות שיש:" />


    </GridLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="100dp">

        <Button
            android:id="@+id/addEquipmentButtonPre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:onClick="RegisterBtn"
            android:text="שנה כמות פריט" />


    </LinearLayout>

</LinearLayout>
