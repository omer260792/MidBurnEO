<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveBtnProfile"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="שמור"
            android:textAlignment="center"/>


        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/signOutBtn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="התנתק"
            android:textAlignment="center"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/linearLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:src="@drawable/ic_launcher_background"
            android:onClick="changePic"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/txtViewName"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:hint="שם"
            android:textAlignment="center"
            android:layout_below="@+id/profile_image" />

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btnChangeImgProfile"
            android:text="החלף שם"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_below="@+id/txtViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@+id/btnChangeImgProfile"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2">

                <EditText
                    android:id="@+id/campFieldProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="החלף קמ״פ:" />

                <EditText
                    android:id="@+id/statusFieldProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="החלף סטטוס:" />
            </GridLayout>

        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>