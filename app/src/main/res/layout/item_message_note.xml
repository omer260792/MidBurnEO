<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayoutTop3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtViewTimeNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="16:00"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/txtViewMsgNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTimeNote"
            android:gravity="right"
            android:hint="title"
            android:paddingRight="5dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tvContentNote"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txtViewMsgNote"
            android:gravity="right"
            android:hint="text"
            android:paddingRight="5dp"
            android:textSize="20dp" />


        <CheckBox
            android:id="@+id/checkBoxNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvContentNote"
            android:gravity="right"
            android:onClick="onClickCheckBox"
            android:paddingRight="5dp"
            android:text="סיום המטלה" />

        <LinearLayout
            android:id="@+id/linearLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxNote"
            android:paddingRight="5dp">

            <GridLayout
                android:id="@+id/gridViewNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1">

                <TextView
                    android:id="@+id/tvDateEndNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="date"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:ems="10"
                    android:hint="תאריך סיום המטלה:" />


            </GridLayout>
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>